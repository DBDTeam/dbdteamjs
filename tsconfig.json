{
   "compilerOptions": {
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "target": "ESNext",
      "declaration": true,
      "skipLibCheck": true,
      "strict": true,
      /* tyoes */
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "noImplicitThis": true,
      "noUnusedParameters": true,
      "noImplicitReturns": false,
      "noFallthroughCasesInSwitch": true,
      "paths": {
         "@types": [
            "./typings/index.d.ts"
         ]
      },
      "outDir": "./lib",
      "rootDir": "./src"
   },
   "include": [
      "./src"
   ],
   "exclude": [
      "./lib"
   ],
   "typedocOptions": {
      "entryPoints": [
         "./src/"
      ],
      "out": "././docs",
      // "plugin": ["typedoc-material-theme"],
      // "themeColor": "#cb9820",
   }
}